{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\mingw32\\bin\\gcc.exe",
			"args": [
                "-fdiagnostics-color=always",
                "-g",
				"${workspaceFolder}/src/**",
				"${workspaceFolder}/src/Entidades/*.cpp",
				"${workspaceFolder}/src/Entidades/Personagens/*.cpp",
				"${workspaceFolder}/src/Gerenciadores/*.cpp",
                "-I\"${workspaceFolder}\\SFML-2.6.2\\include\"",
                "-I\"${workspaceFolder}\\src\\Gerenciadores\"",
				"-I\"${workspaceFolder}\\src\\Entidades\"",
				"-I\"${workspaceFolder}\\src\\Entidades\\Personagens\"",
                "-L\"${workspaceFolder}\\SFML-2.6.2\\lib\"",
                "-o",
                "-lsfml-graphics",
                "-lsfml-system",
                "-lsfml-window"
            ],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\mingw32\\bin\\gcc.exe"
		}
	]
}